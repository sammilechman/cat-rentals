

    <select name="cat_rental_request[cat_id]" id="cat_id">
      <!-- `Nothing.`, if selected, is the value that will be submitted to
        the server; user is displayed "Nothing." as the choice -->
        <% @cats.each do |cat|  %>
        <option value= <%= cat.id %>> <%=cat.name%> </option>

        <%end%>

      </select>

<p>

      <label for="start_date">Start date:</label>
      <!-- click on the date will launch a date picker -->
      <input name="cat_rental_request[start_date]" id="start_date" type="date" ></input>

      <label for="end_date">End date:</label>
      <!-- click on the date will launch a date picker -->
      <input name="cat_rental_request[end_date]" id="end_date" type="date" ></input>

    </p>

