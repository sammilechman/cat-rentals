<h1>Cool Cat</h1>

<p>
<table style="width:300px">
  <tr>
    <td>name</td>
    <td><%=@cat.name%></td>
  </tr>
  <tr>
    <td>age</td>
    <td><%=@cat.age%></td>
  </tr>
  <tr>
    <td>birth_date</td>
    <td><%=@cat.birth_date%></td>
  </tr>
  <tr>
    <td>color</td>
    <td><%=@cat.color%></td>
  </tr>
  <tr>
    <td>sex</td>
    <td><%=@cat.sex%></td>
  </tr>
</table>
</p>

<table style="width:300px">
  <tr>
    <td>Start Date: </td>
    <td>End Date: </td>
    <td> Status: </td>
  </tr>
  <% @requests.each do |request|%>
    <tr>
      <td> <%=request.start_date%>  </td>
      <td> <%=request.end_date%></td>
      <td>
        <% if request.pending? %>
        <%= button_to "Approve", approve_cat_rental_request_url(request) %>
        <%= button_to "Deny", deny_cat_rental_request_url(request) %>
        <% else %>
          <%=request.status %>
        <% end %>
      </td>
    </tr>
  <%end%>
</table>

